
.container{
    display: flex;
    flex-direction: column;
    background-color: white;
}
.moodText {
    padding: 0 25rpx;
    background-color: #fff;
}

textarea {
    width: 700rpx;
    height: 200rpx;
    padding: 20rpx 0;
}

.pic-box {
    height: 170rpx;
    padding:0 25rpx;
    display: flex;
    align-items: center;
    background-color: white;
}


.pic-box-btn{
    width: 120rpx;
    height: 120rpx;
}

.pic-box-image {
    width: 120rpx;
    height: 120rpx;
}

.deleteBtn {
    position: relative;
	right:16rpx;
	top:-64rpx;
	width:18px;
	height:18px;
}


.line-box{
    padding-left: 25rpx;
}
.line {
    height: 1px;
    background-color: #f2f2f2;
}

.location {
    background-color: white;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 40px;
    padding-left: 25rpx;
    line-height: 40px;
}

.location:active {
    background-color: #f2f2f2;
}

.image {
    width: 22px;
    height: 22px;
}

.goto {
    width: 18px;
    height: 18px;
}
.box {
    display: flex;
    flex: 1;
    justify-content: flex-end;
    margin-right: 25rpx;
}

.text {
    margin-left: 30rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.whoSee {
    background-color: white;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 40px;
    padding-left: 25rpx;
    line-height: 40px;
    margin-top: 20rpx;
}
.whoSee:active {
    background-color: #f2f2f2;
}

button {
    margin-top: 40rpx;
    width: 680rpx;
}
