@keyframes myfirst {
    from {
        bottom: -56px;
    }

    to {
        bottom:0;
    }
}

.modify_nick {
    position: fixed;
    z-index: 2;
    background: #f0f0f0;
    bottom: 0;
    left: 50%;
    width: 100%;
    height: 104rpx;
    margin-left: -50%;
    border: 2rpx solid #ccc;
    box-sizing: border-box;
    animation: myfirst 0.2s;
}

.modify_nick button {
    position: absolute;
    left: 0px;
    top: 10rpx;
    padding: 0;
    font-size: 16px;
    height: 72rpx;
    width: 120rpx;
    border: 0px;
    background: none;
    line-height: 72rpx;
}

.modify_nick button::after{
    border: 0 none;
}

.modify_nick input {
    background: #fff;
    height: 72rpx;
    margin-top: 15rpx;
    line-height: 72rpx;
    width: 80%;
    padding: 0 10rpx;
    box-sizing: border-box;
    border-radius: 2px;
    margin-left: 30rpx;
}

.modify_nick .modify_nick_btn {
    left: auto;
    right: 0px;
}

.modify_nick_layer {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background: #000;
    z-index: 1;
    opacity: 0.3;
}