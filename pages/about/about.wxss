page {
    width: 100%;
    height: 100%;
    background-color: white;
}

view {
    width: 100%;
}

.app-about {
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content: space-around;
    align-items: center;
}

.app-title {
    font-size: 60rpx;
    text-align: center;
    color: #555;
}

.app-intro {
    box-sizing: border-box;
    padding: 60rpx;
    height: 900rpx;
}

.app-intro-item {
    margin-bottom: 40rpx;
}

.app-intro-title {
    margin-bottom: 10rpx;
    font-size: 32rpx;
    color: #666;
}

.app-intro-content {
    color: #ccc;
}