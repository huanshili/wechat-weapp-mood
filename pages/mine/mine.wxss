page {
    width: 100%;
    height: 100%;
}
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40px;
    padding-bottom: 20px;
    background-color: white;
}

.userinfo-avatar {
    width:128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}
.userinfo-signature {
    margin-top: 10px;
}

.setlist {
    display: flex;
    flex-direction: column;
    margin-top: 40px;
    
    background-color: white;
}
.suggest {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 46px;
    padding-left: 15px;
    line-height: 46px;
}
.line {
    height: 1px;
    background-color: #f2f2f2;
}

.linebox {
    padding-left: 15px;
}
.setting {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 46px;
    line-height: 46px;
    padding-left: 15px;
}
.about {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 46px;
    line-height: 46px;
    padding-left: 15px;
}
.hoverView {
    background-color: #f2f2f2;
}

.image {
    width: 22px;
    height: 22px;
}

.goto {
    width: 18px;
    height: 18px;
}
.box {
    display: flex;
    flex: 1;
    justify-content: flex-end;
    margin-right: 10px;
}

.text {
    margin-left: 15px;
}

.contact {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 54px;
    padding-left: 15px;
    background-color: white;
    line-height: 54px;
    margin-top: 20px;
}

